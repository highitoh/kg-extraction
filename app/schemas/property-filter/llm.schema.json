{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "relations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "src_id": {
            "type": "string",
            "description": "The ID of the source class"
          },
          "dest_id": {
            "type": "string",
            "description": "The ID of the destination class"
          },
          "prohibited": {
            "type": "boolean",
            "description": "Whether this relation is prohibited by the rules"
          },
          "justification": {
            "type": "string",
            "description": "Brief justification for the decision"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score of the judgment (0.0 to 1.0)"
          }
        },
        "required": ["src_id", "dest_id", "prohibited", "justification", "confidence"],
        "additionalProperties": false
      },
      "description": "Array of property relation judgments with prohibition status"
    }
  },
  "required": ["relations"],
  "additionalProperties": false
}
