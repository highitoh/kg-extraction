{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "judgments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "judgment": {
            "type": "string",
            "enum": ["ACCEPT", "REVIEW", "REJECT"],
            "description": "The judgment category for the class"
          },
          "justification": {
            "type": "string",
            "description": "Brief reasoning for the judgment"
          }
        },
        "required": ["judgment", "justification"],
        "additionalProperties": false
      },
      "description": "Array of judgment objects with category and reasoning"
    }
  },
  "required": ["judgments"],
  "additionalProperties": false
}
