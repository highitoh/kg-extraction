{
  "$id": "https://github.com/highitoh/kg-extraction/schemas/doc-text-chain/input.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DocTextChainInput",
  "type": "object",
  "description": "ドキュメントファイル文章抽出の入力情報",
  "properties": {
    "files": {
      "type": "array",
      "description": "抽出対象ドキュメントファイルの情報",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string",
            "description": "抽出対象ドキュメントファイルのパス"
          }
        },
        "required": ["path"]
      }
    }
  },
  "required": ["files"],
  "additionalProperties": false
}